<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/1")
    @Styles.Render("~/bundles/1/2")
    @Styles.Render("~/bundles/1/2/3")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <!--[if lt IE 9]>
      @Scripts.Render("~/bundles/ie8")
    <![endif]-->

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Your App Name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="body">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Web Framework</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
