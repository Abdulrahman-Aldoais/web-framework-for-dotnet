<div ng-controller="TableCtrl">
    <section class="content-header">
        <h1>
            Table
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-tag"></i>
                <h3 class="box-title">Table</h3>
            </div>
            <div class="box-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in model.data track by $index">
                            <td ng-bind="item.title"></td>
                            <td ng-bind="item.dateTime | appDateTime"></td>
                            <td>
                                <a ng-click="remove(item)" class="text-danger">
                                    <i class="fa fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3">
                                <bn-ui-pager ng-model="model" on-page="search(page)"></bn-ui-pager>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script src="~/Areas/Admin/Content/js/pages/example/table.js"></script>
}