<header class="main-header">
    <a href="#" class="logo">
        <span class="logo-mini" ng-bind-html="::appSettings.appLogoName"></span>
        <span class="logo-lg" ng-bind-html="::appSettings.appShortName"></span>
    </a>
    <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>

        <div class="navbar-toolbox">
            <ul class="nav navbar-nav">
                <li ng-repeat="tool in tools">
                    <a href="#" ng-click="tool.onclick()">
                        <i ng-class="tool.icon"></i>
                        <span ng-bind="tool.text"></span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown notifications-menu" ng-if="appSettings.appNotification.url">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>
                        <span class="label label-warning" ng-bind="appNotifications.length"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header">You have <span class="text-danger" ng-bind="appNotifications.length"></span> messages</li>
                        <li>
                            <ul class="menu">
                                <li ng-repeat="notification in appNotifications track by $index">
                                    <a ng-click="onNotificationClick(notification)">
                                        <i class="{{notification.icon}}" ng-show="notification.icon"></i>
                                        <span ng-bind="notification.title"></span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="footer" ng-if="::appSettings.appNotification.more">
                            <a ng-href="{{::appSettings.appNotification.more}}" ng-bind="::appSettings.appNotification.moreLabel||'View all'"></a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/images/logo.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs">@User.Identity.Name</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="~/images/logo.jpg" class="img-circle" alt="User Image">
                            <p>
                                @User.Identity.Name
                                <small>http://www.bndy.net</small>
                            </p>
                        </li>
                        @*<li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Followers</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Sales</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Friends</a>
                                    </div>
                                </div>
                            </li>*@
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a href="#" class="btn btn-default btn-flat" ng-click="logout()">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>
            </ul>
        </div>
    </nav>
</header>
