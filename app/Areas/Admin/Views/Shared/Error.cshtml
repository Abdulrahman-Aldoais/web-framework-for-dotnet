@model System.Web.Mvc.HandleErrorInfo

@{
    var error = Model == null ? (TempData["Error"] as Exception) : Model.Exception;
    Layout = "~/Areas/Admin/Views/Shared/_Common.cshtml";
    if (!HttpContext.Current.IsDebuggingEnabled)
    {
        error = null;
    }
}
<section class="content-header"></section>

<section class="content">
    <div class="error-page">
        <h2 class="headline text-yellow"> 404</h2>

        <div class="error-content">
            <h3>
                <i class="fa fa-warning text-yellow"></i>
                @if (error == null)
                {
                    <span>
                        Oops! Page not found.
                    </span>
                }
                else
                {
                    <span>@error.Message</span>
                }
            </h3>
            @if (error == null)
            {
                <p>
                    We could not find the page you were looking for.
                    Meanwhile, you may <a href="/admin/home/index">return to home/dashboard</a> or try using the other menu.
                </p>
            }
            else
            {
                <p>@error.StackTrace</p>
            }
        </div>
    </div>
</section>